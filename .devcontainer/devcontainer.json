{
        "name": "chimera",
        "build": {
                "dockerfile": "Dockerfile"
        },
        "initializeCommand": "mkdir -p \"${localEnv:HOME}${localEnv:USERPROFILE}/.claude\"",
        "containerEnv": {
                "CHIMERA_BUILD_DIR": "/build"
        },
        "customizations": {
                "vscode": {
                        "settings": {},
                        "extensions": [
                                "anysphere.cpptools",
                                "ms-vscode.cmake-tools",
                                "fredericbonnet.cmake-test-adapter",
                                "ms-azuretools.vscode-docker",
                                "anthropic.claude-code",
                                "benjarvis.uncrustify"
                        ]
                }
        },
        "mounts": [
                "source=chimera-build,target=/build,type=volume",
                "source=chimera-worktrees,target=/worktrees,type=volume",
                "source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude,target=/root/.claude,type=bind,consistency=cached"
        ],
        "appPort": [],
        "forwardPorts": [],
        "privileged": true,
        "workspaceMount": "source=${localWorkspaceFolder},target=/chimera,type=bind",
        "workspaceFolder": "/chimera"
}